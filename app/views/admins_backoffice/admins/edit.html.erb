<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Editando Administrador:</h1> 
    </div>
</div>


<div class="panel-body">
        <div class="row">
            <div class="col-lg-6">
                <%= form_with(model:  [:admins_backoffice, @admin ], local: true) do |form|%>
                    <div class="form-group">
                        
                        <%= form.label :email %>
                         <%= form.text_field :email, class:"form-control", placeholder:"Enter text"%>
                    </div>

                    <div class="form-group">
                       
                        <%= form.label :password %>
                         <%= form.text_field :password, class:"form-control", placeholder:"Enter text"%>
                    </div>

                    <div class="form-group">
                      
                        <%= form.label :password_confirmation %>
                         <%= form.text_field :password, class:"form-control", placeholder:"Enter text"%>
                    </div>
                    
                    <button type="submit" class="btn btn-default">Salvar alterações</button>
                           
                <% end %>
            </div>

        </div>
    </div>